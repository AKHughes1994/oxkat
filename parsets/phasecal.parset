beam-l-axis = None
beam-m-axis = None

[montblanc]
_Help = Montblanc simulation options
device-type = CPU
dtype = float
feed-type = linear
mem-budget = 1024
verbosity = WARNING
threads = 0

[weight]
_Help = Weighting options
column = WEIGHT_SPECTRUM

[flags]
_Help = General flagging options
apply = -cubical
auto-init = legacy
save = cubical
save-legacy = auto
reinit-bitflags = False
warn-thr = 0.3
