[data]
_Help = Visibility data options
ms = 
column = DATA
time-chunk = 32
freq-chunk = 1024
rebin-time = 1
rebin-freq = 1
chunk-by = SCAN_NUMBER
chunk-by-jump = 1.0
single-chunk = 

[sel]
_Help = Data selection options
field = 0
ddid = None
taql = 
